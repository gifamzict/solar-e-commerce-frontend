// Define the base URL from environment variables
// Ensure VITE_API_BASE_URL ends with a slash
const API_BASE_URL = (import.meta.env.VITE_API_BASE_URL || 'https://web-production-e65f7.up.railway.app/api') + '/';

// --- API Service Functions ---

// Axios is automatically typed when using TypeScript, making error handling cleaner.

// LOGIN: (Placeholder)
const loginUser = async (credentials: { email: string; password: string }) => {
  try {
    const response = await axios.post(`${API_BASE_URL}login`, credentials);
    return response.data; // Axios wraps the response data in the 'data' property
  } catch (error) {
    if (axios.isAxiosError(error) && error.response) {
      // Throw the backend error message
      throw new Error(error.response.data.message || error.response.statusText);
    }
    throw new Error("Network error or failed to connect.");
  }
};

// REGISTER USER (Includes password confirmation for Laravel)
type RegisterData = {
  name: string;
  email: string;
  password: string;
  password_confirmation: string; // Required for Laravel's 'confirmed' rule
};

const registerUser = async (userData: RegisterData) => {
  try {
    const response = await axios.post(`${API_BASE_URL}register`, userData);
    return response.data; // Axios wraps the success data
  } catch (error) {
    if (axios.isAxiosError(error) && error.response) {
      const responseData = error.response.data;

      // Handle 422 Validation Errors from Laravel
      if (error.response.status === 422 && responseData.errors) {
        const errors = responseData.errors;
        // Get the message of the first field with an error
        const firstFieldName = Object.keys(errors)[0];
        const firstErrorMessage = errors[firstFieldName][0];

        throw new Error(firstErrorMessage);
      }

      // Handle other API errors (e.g., 401, 403, 500)
      throw new Error(responseData.message || error.response.statusText);
    }
    throw new Error("Network error or failed to connect.");
  }
};


